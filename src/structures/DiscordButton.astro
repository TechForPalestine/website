---
const { href = "https://techforpalestine.org/discord-invite", children, class: additionalClass = '' } = Astro.props;
import ToolTip from "../components/ToolTip.astro";
---
    
<ToolTip
  text="If you face any issues, try signing out of Discord then try again."
>
  <a
    target="_blank"
    href={href}
    class={`inline-flex items-center justify-center gap-2 transition-colors rounded-md bg-blue-600 text-white hover:bg-blue-700 font-semibold py-2 px-4 shadow-sm w-40 ${additionalClass}`}
  >
    {children}
    <!-- Chevron Icon -->
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      class="w-5 h-5 ml-2"
      aria-hidden="true"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"
      />
    </svg>
  </a>
</ToolTip>
