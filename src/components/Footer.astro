---
import Container from "./Container.astro";
import Socials from "./Socials.astro";
import TFPLogo from "./TFPLogo.astro";

// Comprehensive footer navigation organized by category
const footerNavigation = {
    "About": [
        ["About Us", "/about"],
        ["Learn More", "/learn-more"],
        ["Media", "/media"],
    ],
    "Get Involved": [
        ["Get Involved", "/get-involved"],
        ["Why Volunteer", "/why-volunteer"],
        ["Volunteer", "/volunteer"],
        ["Donate", "/donate"],
    ],
    "Programs": [
        ["Incubator", "/incubator"],
        ["Projects", "/projects"],
        ["Ideas", "/ideas"],
        ["Events", "/events"],
    ],
    "Resources": [
        ["Tools", "/tools"],
        ["Resources", "/resources"],
        ["Hire Palestinians", "/help/hire"],
        ["Blog", "https://updates.techforpalestine.org"],
    ]
};
---

    <footer class="text-zinc-700 text-sm">
        <Container>
            <div class="flex flex-col gap-10 py-10 md:flex-row md:justify-between md:items-start">

                <!-- Left Column: Logo and copyright -->
                <div class="space-y-2 max-w-sm">
                    <div class="h-16 w-auto">
                        <a href="/" class="flex items-center">
                            <img src="/mark-transparent.png" alt="tpf logo" class="h-16" />
                        </a>
                    </div>

                </div>

                <!-- Right Column: Site Index -->
                <div class="grid grid-cols-2 gap-x-8 gap-y-6 sm:grid-cols-4 text-right md:text-left">
                    {Object.entries(footerNavigation).map(([category, links]) => (
                        <div class="space-y-3">
                            <h3 class="font-semibold text-black text-base">{category}</h3>
                            <div class="space-y-2">
                                {links.map(([label, href]) => (
                                    <a
                                        href={href}
                                        class="block text-zinc-600 transition-colors hover:text-zinc-900 hover:underline"
                                        target={href.startsWith('http') || href.startsWith('mailto:') ? '_blank' : '_self'}
                                        rel={href.startsWith('http') ? 'noopener noreferrer' : undefined}
                                    >
                                        {label}
                                    </a>
                                ))}
                            </div>
                        </div>
                    ))}
                </div>
            </div>


            <div class="flex flex-col gap-10 py-10 md:flex-row md:justify-between md:items-start">
                <p className="text-xs text-zinc-600">
                    &copy; {new Date().getFullYear()} TechForPalestine. All rights reserved. Tech for Palestine is a registered 501(c)(3) nonprofit.
                </p>
                <Socials/>
            </div>
        </Container>
    </footer>
