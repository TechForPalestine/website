---
import Socials from "./Socials.astro";
import TFPLogo from "./TFPLogo.astro";
import { Icon } from "astro-icon/components";
import NavBar from "./NavBar.svelte";
let toggleEl = false;

const toggle = () => {
  toggleEl = !toggleEl;
};

const currentRoute = Astro.url.pathname;

const navigation = new Map([
  ["Home", {
    href: "/",
    submenu: null
  }],
  ["About", {
    href: "/about",
    submenu: [
      ["Team", "/coming-soon"],
      ["Mission & Vision", "/coming-soon"],
      ["Media", "/media"],
      ["Contact Us", "/coming-soon"]
    ]
  }],
  ["Incubator", {
    href: "/incubator",
    submenu: [
      ["Projects", "/projects"],
      ["Ideas", "/ideas"],
      ["Tools", "/tools"]
    ]
  }],
  ["Get Involved", {
    href: "/get-involved",
    submenu: [
      ["Discord", "/coming-soon"],
      ["Entrepreneurs for Palestine", "/e4p"],
      ["Investors for Palestine", "/coming-soon"],
      ["Mentor", "/coming-soon"],
      ["Volunteer", "/volunteer"],
      ["Start a project", "/project-apply"],
      ["Hire Palestinians", "/help/hire"]
    ]
  }],
  ["Learn", {
    href: "/coming-soon",
    submenu: [
      ["Updates", "https://updates.techforpalestine.org"],
      ["Events", "/events"],
      ["Shopping Ethically", "/coming-soon"],
      ["How to Boycott", "/coming-soon"],
      ["Tech Complicity", "/coming-soon"],
      ["FAQ", "/coming-soon"]
    ]
  }]
]);

// TODO: MOVE BANNER TO LAYOUT
---

<NavBar client:load navigation={navigation} currentRoute={currentRoute}>
  <TFPLogo slot="tfp-logo" />
  <Socials slot="socials" />
  <Icon name="solar:hamburger-menu-outline" class="h-8 w-8" slot="burger-icon" />
  <Icon name="mdi:close" class="h-8 w-8" slot="close" />
</NavBar>
