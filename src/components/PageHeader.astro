---
export interface PageHeaderProps {
  /** Small label displayed above the main heading */
  overline?: string;

  /** Main heading text - bold and large, primary focus of the page */
  title: string;

  /** Optional subtitle providing additional context or description */
  subtitle?: string;

  /** Optional URL to make the subtitle clickable as a link */
  subtitleLink?: string;
}

const { overline = "", title, subtitle = "", subtitleLink = "" } = Astro.props as PageHeaderProps;
---

<div class="mx-auto max-w-5xl px-4 py-10 text-center sm:py-12">
  {overline && <p class="mb-2 text-xl font-medium text-green-700 sm:text-2xl">{overline}</p>}

  <h1
    class="text-4xl font-extrabold leading-tight tracking-tight text-zinc-900 sm:text-5xl md:text-6xl"
  >
    {title}
  </h1>

  {
    subtitle && (
      <p class="mt-6 text-lg text-zinc-600 sm:text-xl">
        {subtitleLink ? (
          <a
            href={subtitleLink}
            class="underline decoration-dotted underline-offset-4 transition hover:text-zinc-900"
          >
            {subtitle}
          </a>
        ) : (
          subtitle
        )}
      </p>
    )
  }

  <hr class="mx-auto mt-10 h-1 w-24 rounded-full border-none bg-zinc-800" />
</div>
