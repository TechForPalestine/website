---
interface Props {
  type?: "button" | "submit" | "reset";
}

const { type = "button" } = Astro.props;
---

<button
  type={type}
  class="inline-flex h-10 items-center justify-center gap-2 whitespace-nowrap rounded bg-green-800 px-2 text-sm font-medium text-white shadow-sm transition-colors hover:bg-green-900 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2"
>
  <slot />
</button>
