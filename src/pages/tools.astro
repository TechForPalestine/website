---
import Layout from "../layouts/Layout.astro";
import "../styles/base.css";
import ToolPopup from "../components/ToolPopup";
const toolsArray =[
{name:"boycat",desc:"Your Ethical Shopping Companion",link:"https://www.boycat.io/"},
{name:"Newscord",desc:"Giving you the full story",link:"https://newscord.org/"},
{name:"Find a Protest",desc:"Discover solidarity events for peace, justice, and human rights in your community.",link:"https://www.findaprotest.info/"},
{name:"Jaywalk",desc:"Walk for justice",link:"https://jaywalkapp.org/"},
{name:"T4P Datasets",desc:"Tracking the human toll. Use the data from our APIs to tell their story.",link:"https://data.techforpalestine.org/"},
]
---

    <Layout title="Tools">
        <main>
            <div  class="relative  flex flex-col items-center justify-center pt-5 ">
            <h1 class="text-4xl font-extrabold text-gray-900 mb-6 leading-tight">Available Tools</h1>

            <!-- Grid for tools -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl w-full">

                <!--  Card for a Tool -->
                <div class="bg-white shadow-md rounded-lg p-6 border border-gray-200 tool-box">
                   <div> <h2 class="text-xl font-semibold text-gray-800 mb-3">Pal-chat</h2>
                    <p class="text-gray-600 mb-4">Real-time chat system for palestine.</p></div>
                    <ToolPopup client:load buttonLabel="Open Chat">
                        <chat-box />
                    </ToolPopup>
                </div>
{toolsArray.map((row)=>
                  <div class="bg-white shadow-md rounded-lg p-6 border border-gray-200 tool-box" >
                                    <div><h2 class="text-xl font-semibold text-gray-800 mb-3">{row.name}</h2>
                                    <p class="text-gray-600 mb-4">{row.desc}</p>
                                    </div>
                                    <a href={row.link} target="_blank" class="px-4 py-2 bg-green-800 text-white rounded hover:cursor-pointer">
                                                    Visit {row.name}
                                                </button>

                  </div>
)}
                <!-- Add more tool cards here if needed -->

            </div>
            </div>
        </main>
    </Layout>
