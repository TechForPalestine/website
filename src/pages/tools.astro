---
// src/pages/tools.astro
import Layout from "../layouts/Layout.astro";
import ToolPopup from "../components/ToolPopup";
import "../styles/base.css";

const topLeft = [
    {
        name: "Newscord",
        desc: "Giving you the full story",
        link: "https://newscord.org/",
        logo: "/newscord.svg",
        button: "Visit Newscord"
    },
    {
        name: "Boycat",
        desc: "Your Ethical Shoppings Companion",
        link: "https://www.boycat.io/",
        logo: "/Boycat.png",
        button: "Visit Boycat"
    },
    {
        name: "Find A Protest",
        desc: "Discover protests and actions across the world",
        link: "https://www.findaprotest.info/",
        logo: "/findprotest.svg",
        button: "Visit Protest"
    }
];

const rightCard = {
    name: "Pal Chat",
    desc: "A secure chat system for Palestine.",
    img: "/logo-stone-thrower-bot-transparent.png"
};

const bottomRow = [
    {
        name: "T4P Datasets",
        desc: "Tracking the human toll. Use the data from our APIs to tell-their story.",
        link: "https://data.techforpalestine.org/",
        logo: "/mark-transparent.png",
        button: "Visit T4P Datasets"
    },
    {
        name: "The Wall",
        desc: "A browser plugin to detect and block more than Israel related websites and their social accounts.",
        link: "https://thewallproject.github.io/",
        logo: "/thewall.svg",
        button: "Visit The Wall"
    },
    {
        name: "Profile Pic Maker",
        desc: "Show your support for Palestine by creating a profile picture with a Palestinian flag.",
        link: "https://ppm.techforpalestine.org/",
        logo: "/profile-maker.png",
        button: "Visit Jaywalk"
    },
    {
        name: "Anti-Palestinian VC funds",
        desc: "A database of anti-Palestinian VC funds.",
        link: "https://github.com/TechForPalestine/antipalestinian-vc-funds/",
        logo: "/mark-transparent.png",
        button: "Visit Anti-Palestinian VC funds"
    }
];
---

    <Layout title="Tools">
        <main class=" min-h-screen py-16 px-4">
            <h2 class="text-4xl font-bold text-center text-green-900 mb-12">Available Tools</h2>
            <p class="text-center text-gray-600 mt-2">
                A growing list of open-source projects supporting Palestine.
            </p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-6xl mx-auto mt-12">
                <!-- Right Featured Card -->
                <div class="bg-white p-6 rounded-xl shadow border flex flex-col justify-center">
                    <img src={rightCard.img} alt={rightCard.name} class="mb-4 w-full max-h-48 object-contain"/>
                    <h3 class="text-green-900 text-2xl font-bold mb-2">{rightCard.name}</h3>
                    <p class="text-sm text-gray-700 mb-4">{rightCard.desc}</p>
                    <ToolPopup client:load buttonLabel="Open Chat">
                        <chat-box />
                    </ToolPopup>
                </div>
                <!-- Left Column -->
                <div class="flex flex-col gap-6">
                    {topLeft.map(tool => (
                        <div class="bg-white p-6 rounded-xl shadow border flex items-start gap-4">
                            <img src={tool.logo} alt={tool.name} class="w-8 h-8"/>
                            <div>
                                <h3 class="font-bold text-green-900">{tool.name}</h3>
                                <p class="text-sm text-gray-700">{tool.desc}</p>
                                <a href={tool.link} target="_blank" class="inline-block mt-2 px-4 py-1 bg-green-800 text-white rounded-full text-sm hover:bg-green-900 transition">
                                    {tool.button}
                                </a>
                            </div>
                        </div>
                    ))}
                </div>


            </div>

            <!-- Bottom Cards -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-12 max-w-6xl mx-auto">
                {bottomRow.map(tool => (
                    <div class="bg-white p-6 rounded-xl shadow border flex items-start gap-4">
                        <img src={tool.logo} alt={tool.name} class="w-8 h-8"/>
                        <div>
                            <h3 class="font-bold text-green-900">{tool.name}</h3>
                            <p class="text-sm text-gray-700">{tool.desc}</p>
                            <a href={tool.link} target="_blank" class="inline-block mt-2 px-4 py-1 bg-green-800 text-white rounded-full text-sm hover:bg-green-900 transition">
                                {tool.button}
                            </a>
                        </div>
                    </div>
                ))}
            </div>
        </main>
    </Layout>
