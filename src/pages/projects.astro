---
import Layout from "../layouts/Layout.astro";
import ProjectsNewComponent from "../components/ProjectsNew.tsx";
import PageHeader from "../components/PageHeader.astro";
import "../styles/base.css";

// Start with empty data, let client-side fetch handle it (similar to events pattern)
let projects: any[] = [];
let loading: boolean = true;

console.log("SSR: Skipping server-side fetch for new projects, letting client load data");
---

<Layout
  title="Incubator Projects - Tech for Palestine"
  description="Explore the projects in the Tech for Palestine Incubator. We help pro-Palestine advocates build, grow, and scale technical projects that support Palestinian freedom and counter pro-Israel propaganda."
>
  <main>
    <PageHeader
      overline="Tech for Palestine"
      title="Incubator Projects"
      subtitle="What is the incubator?"
      subtitleLink="/incubator"
    />
  </main>

  <ProjectsNewComponent projects={projects} loading={loading} client:only="react" />

  <!-- Call to Action -->
  <div class="relative mb-8 mt-16">
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="w-full border-t border-gray-300"></div>
    </div>

    <div class="relative flex justify-center">
      <a
        href="https://techforpalestine.org/project-application-form"
        target="_blank"
        class="z-10 inline-flex transform items-center justify-center rounded-full bg-gradient-to-r from-blue-500 to-blue-700 px-6 py-3 text-lg font-semibold text-white shadow-xl transition-colors duration-300 ease-in-out hover:scale-105 hover:from-blue-600 hover:to-blue-800 sm:text-xl md:text-2xl"
      >
        Apply to the T4P Incubator Today!
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="ml-2 h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</Layout>
