---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import SignUpForm from "../structures/SignUpForm.astro";
import "../styles/base.css";
import DiscordButton from "../structures/DiscordButton.astro";
---

<Layout title="Tech For Palestine">
  <main>
    <section class="grid grid-cols-1 lg:grid-cols-2 items-center bg-white">
      <div
        class="text-center items-center justify-center min-h-fit py-16 space-y-12"
      >
        <div class="w-full mx-auto max-w-screen-md space-y-8 px-6 md:px-8">
          <h1 class="text-6xl font-bold tracking-tight">Tech for Palestine</h1>
          <p class="text-lg md:text-xl">
            A loose coalition of 5,000+ founders, engineers, product marketers,
            community builders, investors, and other tech folks working towards
            Palestinian freedom.
          </p>
          <p>
            We aim to end the dehumanization of Palestinians within the tech
            community, and to bring a voice to those who speak up.
          </p>
          <div class="flex flex-col md:flex-row gap-4 justify-center">
            <a
              href="/projects"
              class="inline-flex items-center gap-2 justify-center whitespace-nowrap transition-colors rounded-md bg-green-800 hover:bg-green-900 px-3 h-10 text-base font-medium text-white focus:outline-none"
              >
              Our Projects
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
              </svg>
            </a>
            <a
              target="_blank"
              href="/get-involved"
              class="inline-flex items-center gap-2 justify-center whitespace-nowrap transition-colors rounded-md bg-white text-gray-700 border border-gray-300 hover:bg-gray-100 hover:text-gray-800 font-semibold py-2 px-4 rounded-md shadow-sm"
              >
              Get Involved
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
              </svg>
            </a>
            <DiscordButton>Join Our Discord</DiscordButton>
          </div>
        </div>
      </div>
      <figure class="bg-zinc-50 relative">
        <img
          src="/happy-kids.jpg"
          class="object-cover w-full h-[32rem] lg:h-[42rem]"
          alt="Happy kids in Palestine"
        />
        <figcaption class="absolute right-2 bottom-2 text-xs text-white">
          Â®Motaz Azaiza
        </figcaption>
      </figure>
    </section>
    <section class="container mx-auto max-w-screen-md relative mt-10 mb-10 transition-transform duration-200 ease-out hover:-translate-y-10  cursor-pointer z-10">
        <SignUpForm  arial-label="Sign Up Form"/>
    </section>
  </main>
</Layout>
