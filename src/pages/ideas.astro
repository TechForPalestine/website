---
import Layout from "../layouts/Layout.astro";
import "../styles/base.css";
import { getCollection } from "astro:content";
import { marked } from "marked";
import IdeasWithTabs from "../components/IdeasWithTabs.jsx";

const rawIdeas = await getCollection("ideas");

// Simple filter based on tags (or use separate folders)
const newIdeas = rawIdeas
    .filter(idea => idea.data.category !== "existing")
    .map(idea => {
        const firstParagraph = idea.body
            .split(/\n{2,}/)
            .find(block => !block.trim().startsWith("###"))
            ?.replace(/[*_`>#-]/g, "")
            .replace(/\[([^\]]+)\]\([^)]+\)/g, "$1")
            .trim();

        return {
            ...idea,
            renderedBody: marked.parse(idea.body),
            excerpt: firstParagraph || ""
        };
    });

const existingIdeas = rawIdeas
    .filter(idea => idea.data.category === "existing")
    .map(idea => {
        const firstParagraph = idea.body
            .split(/\n{2,}/)
            .find(block => !block.trim().startsWith("###"))
            ?.replace(/[*_`>#-]/g, "")
            .replace(/\[([^\]]+)\]\([^)]+\)/g, "$1")
            .trim();

        return {
            ...idea,
            renderedBody: marked.parse(idea.body),
            excerpt: firstParagraph || ""
        };
    });

---

    <Layout title="Ideas">
        <main>
            <div class="relative isolate">
                <div class="px-6 py-10 sm:py-16 lg:px-8">
                    <div class="mx-auto max-w-4xl">
                        <h1 class="mt-2 text-4xl sm:text-6xl font-extrabold tracking-tight text-gray-900 text-center">
                            Welcome to the <br class="hidden sm:block" />
                            <span class="text-green-800">Tech for Palestine Ideas</span>
                        </h1>

                        <p class="mt-6 text-lg leading-8 text-gray-600 text-center">
                            At Tech for Palestine, we know there are thousands of projects supporting Israel and promoting anti-Palestinian propaganda. We are on a mission to produce thousands of projects to advocate for the Palestinian people and to support cultural, academic, and economic boycotts, divestment, and sanctions until the Palestinian people are free.
                        </p>

                        <p class="mt-6 text-lg leading-8 text-gray-600 text-center">
                            Our goal is for every project we incubate to become a scaled, high-impact, self-sustaining initiative.
                        </p>

                        <p class="mt-6 text-lg leading-8 text-gray-600 text-center">
                            We need smart, dedicated leaders to build something amazing. Use this list for inspiration if you have the time, talent, and motivation to lead a project.
                        </p>
                    </div>
                </div>

                <IdeasWithTabs newIdeas={newIdeas} existingIdeas={existingIdeas} client:only="react" />

            </div>
        </main>
    </Layout>
