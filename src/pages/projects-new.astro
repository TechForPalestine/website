---
import Layout from "../layouts/Layout.astro";
import ProjectsNew from "../components/ProjectsNew.tsx";
import PageHeader from "../components/PageHeader.astro";
import "../styles/base.css";

// Start with empty data, let client-side fetch handle it (similar to events pattern)
let projects = [];
let loading = true;

console.log("SSR: Skipping server-side fetch for new projects, letting client load data");
---

<Layout title="Projects (New)">
    <PageHeader
        overline="Tech for Palestine"
        title="Incubator Projects (Test)"
        subtitle="Testing new project management app integration"
    />

    <ProjectsNew projects={projects} loading={loading} client:only="react" />
</Layout>