---
import Layout from "../layouts/Layout.astro";
import "../styles/base.css";
---

<Layout title="Get Involved">
  <main>
    <!-- Hero Section with Introductory Text -->
    <section class="relative isolate -z-10">
      <div class="px-6 py-24 sm:py-32 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
          <h2 class="mt-2 text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
            Get Involved
          </h2>
          <p class="mt-4 text-lg text-gray-600">
            Join our mission-driven community to volunteer, collaborate, and innovate.
          </p>
        </div>
      </div>
    </section>

    <!-- Buttons Section: Three Side-by-Side Buttons with Headings -->
    <section class="mb-12 mx-auto max-w-7xl px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
        <!-- Volunteer Button with Heading -->
        <div class="flex flex-col items-center space-y-4">
          <div class="text-lg font-bold text-center">
            Thinking about volunteering?
          </div>
          <a
            href="/why-volunteer"
            class="inline-flex items-center justify-center w-80 rounded-md bg-indigo-600 px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500"
            role="button"
            aria-label="Volunteer With Us"
          >
            Apply to Volunteer
          </a>
                    <div class="text-sm text-center">
            <a href="https://techforpalestine.notion.site/75a9979ec7de4a7db123e54e56546f27?v=d641a2a6722047efbc18a323ece981d0&pvs=74" class="text-indigo-600 hover:underline">Check out specific roles we're looking for right now!</a>
          </div>
        </div>

        <!-- Discord Button with Heading -->
        <div class="flex flex-col items-center space-y-4">
          <div class="text-lg font-bold text-center">
            Looking for a pro-Palestine community?
          </div>
          <a
            href="https://techforpalestine.org/discord-invite"
            class="inline-flex items-center justify-center w-80 rounded-md bg-green-600 px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500"
            role="button"
            aria-label="Join our Discord"
          >
            Join our Discord
          </a>
        </div>

        <!-- Incubator Button with Heading -->
        <div class="flex flex-col items-center space-y-4">
          <div class="text-lg font-bold text-center">
            Do you have a pro-Palestine project?
          </div>
          <a
            href="https://techforpalestine.org/project-application-form"
            class="inline-flex items-center justify-center w-80 rounded-md bg-sky-600 px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-sky-500"
            role="button"
            aria-label="Apply for the T4P Incubator"
          >
            Apply to join the Incubator
          </a>
          <div class="text-sm text-center">
            <a href="https://techforpalestine.org/incubator" class="text-sky-600 hover:underline">Learn more about the Incubator</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Centered Email Signup Form Section -->
    <section class="mb-24 mx-auto max-w-3xl px-6 lg:px-8">
      <div class="bg-white rounded-lg p-6 shadow text-center">
        <h3 class="text-xl font-semibold text-gray-900">Get notified when we have new project ideas</h3>
        <div class="mt-4">
          <script
            async
            src="https://eomail4.com/form/e4098378-9dfa-11ef-b063-0984cdfe0a0d.js"
            data-form="e4098378-9dfa-11ef-b063-0984cdfe0a0d"
          ></script>
        </div>
        <div class="mt-4">
          <a
            href="https://techforpalestine.org/incubator/ideas"
            class="text-sm text-indigo-600 hover:underline"
          >
            Browse our current list of project ideas.
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
