---

<Layout title="Jobs for Palestinians" description="Find organizations that connect Palestinian job seekers with employers.">
  <main>
    <section class="py-24 px-6 sm:py-40 sm:px-16 md:px-20 lg:flex lg:flex-col lg:items-center">
      <div class="lg:max-w-2xl ">
        <h1 class="text-4xl font-normal sm:text-5xl md:text-6xl">
          Hire
          <span class="font-bold">top talent</span>
          from Palestine and the Middle East
        </h1>
        <p class="mt-4 text-xl sm:text-2xl md:text-3xl">
          Get help hiring engineers, designers and technologists from across the region.
        </p>
        <p class="mt-12 text-lg md:mt-20 md:text-xl">
          Know another good resource? Let us know at:
          {
            contacts.map((contact) => (
                <a
                  href={contact.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-block relative top-1.5 ml-1 text-zinc-950/60 hover:text-zinc-950/80"
                >
                  <span class="sr-only">{contact.name}</span>
                  <Icon name={contact.icon} class="h-6 w-6" />
                </a>
            ))
          }
        </p>
      </div>
    </section>
    {
      resourceSections.map(resourceSection => (
        <section class="bg-white py-24 px-6 sm:px-16 md:px-20 lg:flex lg:flex-col lg:items-center">
          <div class="lg:max-w-2xl">
            <h2 class="text-3xl font-bold sm:text-4xl">{resourceSection.name}</h2>
            <div class="mt-12 flex flex-col gap-24 md:gap-32">
              {
                resourceSection.resources.map(resource => (
                  <article>
                    {
                      resource?.logo
                      ? (

                          <h3 class="sr-only">{ resource.name }</h3>
                          <a href={resource.url}>
                            {resource.logo.substring(0, 1) === '/' ? <img class={logoClasses} src={resource.logo}> : <Fragment set:html={resource.logo.replace('<svg ', `<svg class="${logoClasses}" `)}></Fragment>}
                          </a>
                        )
                      : (
                        <h3 class="text-2xl font-bold sm:text-3xl">{resource.name}</h3>
                      )
                    }
                    <p class="mt-4 text-lg leading-loose md:text-2xl md:leading-loose" set:html={resource.description}></p>
                    <p class="mt-8 text-lg md:mt-12">
                      <a
                        href={resource.url}
                        class="
                          inline-flex items-center gap-2 justify-center whitespace-nowrap transition-colors rounded-md bg-green-800 hover:bg-green-900 px-3 h-10 text-base font-medium text-white focus:outline-none
                          md:text-2xl md:px-6 md:py-8
                        "
                        >Visit {resource.name}</a
                      >
                    </p>
                  </article>
                ))
              }
            </div>
          </div>
        </section>
      ))
    }
  </main>
</Layout>
