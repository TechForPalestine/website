    {
        title: "Gaza Diaries: Paul Biggar & Dr. Omar Suleiman",
        source: "YouTube",
        url: "https://www.youtube.com/embed/SZYxUoHYPIg",
        date: "11 months ago",
        description: "A profound conversation discussing the misuse of technology in the genocide in Gaza.",
        embed: true
    },
    {
        title: "How Big Tech Enables Israel's Crimes",
        source: "YouTube",
        url: "https://www.youtube.com/embed/LzXASFo-cf0",
        date: "1.4 years ago",
        description: "Paul Biggar explores the role of major tech companies in facilitating actions against Palestinians.",
        embed: true
    },
    {
        title: "Voices of Impact: Tech for Palestine's Journey",
        source: "YouTube",
        url: "https://www.youtube.com/embed/lQ5DLKLqUtg",
        date: "6 months ago",
